<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp">

    <ImageView
        android:id="@+id/iv_suggestion_ic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_wash_car"/>

    <TextView
        android:id="@+id/tv_suggestion_brf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_suggestion_ic"
        android:text="舒适"/>

    <TextView
        android:id="@+id/tv_suggestion_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="@string/test_suggestion_txt"
        android:layout_toRightOf="@id/iv_suggestion_ic"
        android:textSize="11dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_suggestion_brf"/>

</RelativeLayout>